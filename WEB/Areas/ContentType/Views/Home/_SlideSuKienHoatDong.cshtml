@model IEnumerable<WebModels.WebContent>
@{
    var webmodule = (WebModule)ViewBag.WebModule;
}

<div class="bxslider">
    @foreach (var item in Model)
    {
        var img = item.Image != null ? item.Image : "/images/no-image.jpg";

        var url = Url.Action("Detail", "Home", new
        {
            metatitle = item.MetaTitle != null ? item.MetaTitle : "tapchimoitruong",
            id = item.ID,
            m_metatitle = webmodule.MetaTitle != null ? webmodule.MetaTitle : "tapchimoitruong",
            m_id = webmodule.ID,
            area = ""
        });


        <div>
            <a href="@url" title="@item.Title" style="display:flex;">
                <img src="@img" alt="@item.Title" title="@item.Title" style="margin:auto;">
            </a>
        </div>
    }
</div>

<style>
    .bxslider div {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 400px;
    }

    .bx-wrapper .bx-caption {
        height: auto;
    }
</style>