@model List<WebModels.AccessLog>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}

@using (Html.BeginForm("Deletes", "AccessLog", FormMethod.Post, new { @class = "form-horizontal fix" }))
{   
    <div class="alert alert-info"> 
		@Html.Raw(Resources.Common.DeleteSureItems): <br />
        @foreach(var item in Model){
            
            <br /> <strong> @item.Action </strong> <span>(@item.Title)</span>
            @Html.Hidden("["+Model.IndexOf(item)+"].ID",@item.ID)
            @Html.Hidden("["+Model.IndexOf(item)+"].Action",@item.Action)
            @Html.Hidden("["+Model.IndexOf(item)+"].Title",@item.Title)
        } 
	</div> 
    <div class="validation-group"> 
        @Html.ValidationSummary(true) 
    </div> 
     <div class="form-actions">
        <button class="btn btn-primary" type="submit"><i class="glyphicon-remove"></i> @Resources.Common.Delete</button>
    </div>
    @Html.AntiForgeryToken()
}
<script type="text/javascript">
    $(document).ready(function () {
        var h = 130 + @(Model.Count *25) +0; if (h > 500) h = 500; top.winsetup("@Html.Raw(Resources.Common.DeleteItem) ", 500, h, true);
    });
    function deletes_success() {
        top.$("#window").data("kendoWindow").close();
        top.$("#grid").data("kendoGrid").dataSource.read();
    }
</script>

