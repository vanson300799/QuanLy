@model WebModels.WebSlide

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}

@using (Html.BeginForm("Delete", "WebSlide", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal fix" }))
{
    <div class="alert alert-info">
        @Html.Raw(Resources.Common.DeleteSureItem):  <strong>@Html.DisplayFor(m => m.Title)?</strong> <br />Nội dung:<br /> @Html.Raw(Model.Description)
    </div>
     <div class="form-actions">
        <button class="btn btn-primary" type="submit">@Resources.Common.Delete</button>
    </div>

    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.Title)
    @Html.HiddenFor(m => m.Description)
    @Html.AntiForgeryToken()
}
<script type="text/javascript">
    $(document).ready(function () {
        top.winsetup("@Html.Raw(Resources.Common.DeleteItem)", 700, 150, true);
    });
    function delete_success() {
        top.$("#window").data("kendoWindow").close();
        top.$("#grid").data("kendoGrid").dataSource.read();
    }
</script>