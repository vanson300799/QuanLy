            $("#icon").click(function () {
                var check__class = $("#menu").attr("class");
                if (check__class.includes("clicked_menu")) {
                    $("#menu").removeClass("clicked_menu");
                    localStorage.setItem("IsMenuExpanded", true);
                }
                else {
                    $("#menu").addClass("clicked_menu");
                    localStorage.setItem("IsMenuExpanded", false);
                }
            });

            if (localStorage.IsMenuExpanded == null) {
                localStorage.setItem("IsMenuExpanded", true);
            } else {
                if (localStorage.IsMenuExpanded != "true") {
                    $("#menu").addClass("clicked_menu");
                } else {
                    $("#menu").removeClass("clicked_menu");
                }
            }

            $(".content-left").show();
        });
        $('.numberOnly').keypress(function (event) {
