    .k-webkit {
        overflow: auto !important;
    }
    #btnsubmit {
        outline: none;
        background-color: #339933;
        display: block;
        font-size: 16px;
        min-width: 26px;
        color: #fff;
        text-decoration: none;
        position: relative;
        border-radius: 25px;
        text-align: center;
        padding-right: 2px;
        padding: 0.3vw 2vw;
        line-height: 30px;
    }

    .actions > li {
        float: left;
        list-style: none;
        margin-right: 10px !important;
        padding: 0;
    }
</style>