@model NoteBookKeyViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}

@using (Html.BeginForm("Edit", "NoteBookKey", new { cUserName = ViewBag.cUserName, UserId = Model.ID },
    FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal fix" }))
{
    @Html.HiddenFor(x => x.ID)
    @Html.HiddenFor(x => x.ModifiedAt)
    @Html.HiddenFor(x => x.ModifiedBy)

    <div class="control-group">
        @Html.Label(WebModels.WebResources.DateKey, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.DateString, new { @class = "input-block-level datepicker"})
            @Html.ValidationMessageFor(m=>m.DateString)
        </div>
    </div>
    <div class="validation-group">
        <div class="controls">
            @Html.ValidationSummary(true)
        </div>
    </div>
    <div class="form-actions">
        <button class="k-button" type="submit"><i class="icon-save"></i>@Resources.Common.SaveChanges</button>
        <button class="k-button destroy" type="reset">@WebModels.WebResources.Cancel</button>
    </div>
    @Html.AntiForgeryToken()
}
