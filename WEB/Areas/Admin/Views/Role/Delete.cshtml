@model WebModels.WebRole
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}

@using (Html.BeginForm("Delete", "Role", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal fix" }))
{   
    <div class="alert alert-info"> 
		@Html.Raw(Resources.Common.DeleteSureItem):  <strong>@Html.DisplayFor(m => m.RoleName )</strong>  
	</div>                      
    <div class="validation-group"> 
        @Html.ValidationSummary(true) 
    </div>               
     <div class="form-actions">
           <button class="k-button" type="submit">@Resources.Common.Delete</button> 
    </div>
    @Html.HiddenFor(m => m.RoleName )
    @Html.HiddenFor(m => m.RoleId )     
    @Html.AntiForgeryToken()
    
}
<script type="text/javascript">
    $(document).ready(function () { top.winsetup("@Html.Raw(Resources.Common.DeleteItem) - @Html.Raw(Model.Title) ", 500, 120, true); }); function delete_success() { top.winclose(); top.$("#grid").data("kendoGrid").dataSource.read(); }
</script>
