@{
     
} 
<div id="main"> 
    <div id="left">   
    </div> 
	<div class="container-fluid"> 
        <div class="page-header">
			<div class="pull-left">
                <div class="breadcrumbs"></div>
			</div>
			<div class="pull-right"> 
			</div>
		</div>
        
        <div class="row-fluid">
			<div class="span12">
				<div class="box"> 
					<div class="box-content nopadding">  
                        @(Html.Kendo().Grid<WebModels.ContentType>()    
                            .Name("grid")
                            .Columns(columns => {
                                columns.Bound(p => p.ID).Title(Resources.Common.ID).Width(200);
                                columns.Bound(p => p.Title).Title(Resources.Common.Title);
                                columns.Bound(p => p.Description).Title(Resources.Common.Description); 
                            }) 
                            .Selectable(select => select.Mode(GridSelectionMode.Multiple)) 
                            .DataSource(dataSource => dataSource
                                .Ajax()
                                .Model(model => model.Id(p => p.ID)) 
                                .Read(read => read.Action("ContentType_Read", "ContentType")) 
                             ) 
                        )
					</div>
				</div>
			</div>
		</div>
         
         
	</div>
</div>

 