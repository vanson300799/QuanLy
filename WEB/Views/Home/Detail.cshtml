@model WebModels.WebModule
 

@if (Model != null)
{
     try
    {
        if (Model.PublishDetailLayout != null)
        {
            Layout = Model.PublishDetailLayout;
        }
        else
        {
            Layout = "~/Views/Shared/_Layout_02.cshtml";
        }
        @Html.Action(Model.PublishDetailView == null ? "_PubDetail" : Model.PublishDetailView, Model.ContentType.Controller, new { area = "ContentType", id = ViewBag.ID })
    }
    catch (Exception) { }
}
