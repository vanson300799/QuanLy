@model IEnumerable<WebModule>


<div class="sidebar sidebar-category">
    <div class="box-guide-title">
        <h2>Dịch vụ khác</h2>
    </div>
    <div class="sidebar-content">
        @foreach (var item in Model)
        {
            var img = item.Image != null ? item.Image : "/images/no-image.jpg";
            var url = item.URL;
            if (string.IsNullOrEmpty(item.URL) || string.IsNullOrWhiteSpace(item.URL))
            {
                url = Url.Action("Index", "Home", new { metatitle = item.MetaTitle != null ? item.MetaTitle : "web", id = item.ID });
            }
            <div class="popular-post-item box-guide">
                <figure>
                    <a href="@url">
                        <img src="@img" alt="@item.Title" title="@item.Title" width="130">
                    </a>
                </figure>
                <a class="title-col" href="@url" title="@item.Title">@item.Title</a>
                <p>
                    @if (!string.IsNullOrWhiteSpace(item.Description))
                    {
                        @Html.RawSubString(item.Description, 150)
                    }
                </p>
                <span class="viewDetail"> <a href="@url" title="@item.Title">Chi tiết <i class="fa fa-chevron-circle-right"></i></a></span>
            </div>
        }
    </div>
</div>
<style>
    .title-col {
        margin-top: -5px;
        line-height: 15px;
        color: #5c5c5c;
        font-size: 16px;
        line-height: 24px;
        font-weight: bold;
        margin-bottom: 0;
    }
</style>